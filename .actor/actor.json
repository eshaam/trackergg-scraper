{
	"actorSpecification": 1,
	"name": "tracker-gg-scraper",
	"title": "Tracker.gg Scraper (Fortnite, Apex, Marvel, BF)",
	"version": "0.1.0",
	"dockerfile": "./Dockerfile",
	"input": "./input_schema.json",
	"storages": {
		"dataset": {
			"actorSpecification": 1,
			"title": "Game Stats Dataset",
			"views": {
				"overview": {
					"title": "Overview",
					"transformation": {
						"fields": [
							"game",
							"username",
							"platform",
							"kdRatio",
							"winRate",
							"scorePerMin",
							"matchesPlayed",
							"stats",
							"scrapedAt",
							"url"
						]
					},
					"display": {
						"component": "table",
						"properties": {
							"game": {
								"label": "Game"
							},
							"username": {
								"label": "Player Name"
							},
							"platform": {
								"label": "Platform"
							},
							"kdRatio": {
								"label": "K/D Ratio"
							},
							"winRate": {
								"label": "Win %"
							},
							"scorePerMin": {
								"label": "Score/Min"
							},
							"matchesPlayed": {
								"label": "Matches"
							},
							"stats": {
								"label": "Full Stats (JSON)",
								"format": "json"
							},
							"scrapedAt": {
								"label": "Date Scraped",
								"format": "date"
							},
							"url": {
								"label": "Source URL",
								"format": "link"
							}
						}
					}
				}
			}
		}
	}
}